<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <title>Quiz</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="/quiz.css" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
      </nav>
    </header>
    <main class="container">
      <h1>Quiz</h1>
      <form id="quiz-form">
        <% questions.forEach((question, index) => { %>
        <div class="question-container" data-question-index="<%= index %>">
          <h3>Question <%= question.number %>: <%= question.question %></h3>
          
          <% if (question.type === "multiple") { %>
            <!-- Multiple choice question -->
            <ul>
              <% question.options.forEach(option => { %>
              <li>
                <label>
                  <input
                    type="radio"
                    name="question-<%= question.number %>"
                    value="<%= option.letter %>"
                    data-correct="<%= question.correctAnswer === option.letter %>"
                    onclick="checkAnswer(this, <%= index %>)"
                  />
                  <%= option.letter %>) <%= option.text %>
                </label>
              </li>
              <% }) %>
            </ul>
          <% } else if (question.type === "short") { %>
            <!-- Short answer question -->
            <div class="short-answer-section">
              <textarea 
                id="short-answer-<%= question.number %>" 
                class="short-answer-input" 
                rows="5" 
                placeholder="Type your answer here..."></textarea>
              
              <!-- Hidden field to store the model answer -->
              <input 
                type="hidden" 
                id="model-answer-<%= question.number %>" 
                value="<%= question.modelAnswer %>" 
              />
              
              <div class="button-group">
                <button 
                  type="button" 
                  id="submit-btn-<%= question.number %>"
                  class="submit-button" 
                  onclick="evaluateShortAnswer(<%= question.number %>, <%= index %>)">
                  Submit Answer
                </button>
                
                <button 
                  type="button" 
                  id="show-answer-btn-<%= question.number %>"
                  class="show-answer-button" 
                  onclick="showModelAnswer(<%= question.number %>, <%= index %>)">
                  Show Answer
                </button>
                
                <button 
                  type="button" 
                  id="explain-btn-<%= question.number %>"
                  class="explain-button" 
                  onclick="explainConcept(<%= question.number %>, <%= index %>)">
                  Explain
                </button>
              </div>
              
              <div id="feedback-<%= index %>" class="feedback-container"></div>
              <div id="model-answer-display-<%= index %>" class="model-answer-container"></div>
              <div id="explanation-display-<%= index %>" class="explanation-container"></div>
            </div>
          <% } %>
        </div>
        <% }) %>
      </form>
    </main>
    <footer>
      <nav>
        <a href="/">Home</a>
      </nav>
    </footer>
    <!-- Include marked.js for markdown rendering -->
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="/script.js"></script>
  </body>
</html>